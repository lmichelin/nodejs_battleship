<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="/css/stylesheet.css">
        <title>The Battleship Game</title>
    </head>
    <body>
        
        <div id="game">
            
            <!-- Title -->
            <div class="row">
                <h1 class="text-center title">The Battleship Game</h1>
            </div>

            <!-- grid -->
            <div class="row">
                <!-- attack grid -->
                <div class="col-sm-4 col-sm-offset-1 text-center no-padding">
                    <h2 class="title">Attack Grid</h2>
                    <div class="divTable center">
                        <div class="divTableBody">
                            <div class="divTableHeading divTableCell"></div>

                            <!-- Start by making the labels of the different colums  -->
                            <div v-for='col in battleship.attack_grid.length' :value="col" class="divTableHeading divTableCell">{{String.fromCharCode(64+col)}}</div>

                            <!-- Populate each row -->
                            <div v-for='row in battleship.attack_grid.length' :value="row" class="divTableRow">
                                <!-- row label -->
                                <div class="divTableHeading divTableCell">{{row}}</div>
                                <!-- cell space (boat cell) -->
                                <div v-for='cell in battleship.attack_grid.length' v-bind:class='attackCellClass(row, cell)'  :value='cell' v-on:click='attack' class="divTableCell btn"></div>
                            </div>

                        </div>
                    </div>
                </div>
                
                <!-- Player grid -->
                <div class="col-sm-4 text-center no-padding">
                    <h2 class="title">Our ships</h2>
                    <div class="divTable center">
                        <div class="divTableBody">
                            <div class="divTableHeading divTableCell"></div>

                            <!-- Start by making the labels of the different colums  -->
                            <div v-for='col in battleship.grid.length' :value="col" class="divTableHeading divTableCell">{{String.fromCharCode(64+col)}}</div>

                            <!-- Populate each row -->
                            <div v-for='row in battleship.grid.length' :value="row" class="divTableRow">
                                <!-- row label -->
                                <div class="divTableHeading divTableCell">{{row}}</div>
                                <!-- cell space (boat cell) -->
                                <div v-for='cell in battleship.grid.length' v-bind:class='myCellClass(row, cell)' :value='cell' class="divTableCell btn"></div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div v-for='error in errors' class="alert alert-danger" role="alert">
                        {{error}}
                    </div>
                </div>
                
                
            </div>
        </div>
        
        <!-- JS -->
        <script src="/node_modules/vue/dist/vue.js"></script>
        <script src="/node_modules/vue-resource/dist/vue-resource.js"></script>  
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/game.js"></script>
    </body>
</html>