  <title>The Battleship Game</title>
</head>
<body>

<h1 class="text-center">The Battleship Game</h1>

<div class="container">
  <div class="col-md-6">
    <table style="border: none;" class="table table-bordered text-center">
      <tbody>
        <% for (var i = 0; i < battleship_1.grid.length; i++) {%>
        <tr value="<%=i%>">
          <% for (var j = 0; j < battleship_1.grid[i].length; j++) {
            switch (battleship_1.grid[i][j]) {
              case 0:
                var btn_class = "btn-info";
              break;
              case 1:
                var btn_class = "btn-default";
              break;
              case 2:
                var btn_class = "btn-success";
              break;
              case 3:
                var btn_class = "btn-warning";
              break;
              case 4:
                var btn_class = "btn-danger";
              break;
              default:
                var btn_class = "";
              break; } %>
          <td value="<%=j%>" style="padding:20px;" class="btn <%=btn_class%>"></td>
          <% } %>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <table style="border: none;" class="table table-bordered text-center">
      <tbody>
        <% for (var i = 0; i < battleship_1.attack_grid.length; i++) {%>
        <tr value="<%=i%>">
          <% for (var j = 0; j < battleship_1.attack_grid[i].length; j++) {
          switch (battleship_1.attack_grid[i][j]) {
          case 0:
          var btn_class = "btn-info";
          break;
          case 1:
          var btn_class = "btn-default";
          break;
          case 2:
          var btn_class = "btn-success";
          break;
          case 3:
          var btn_class = "btn-warning";
          break;
          case 4:
          var btn_class = "btn-danger";
          break;
          default:
          var btn_class = "";
          break; } %>
          <td value="<%=j%>" type="button" onclick="action($(this).parent().attr('value'), $(this).attr('value'))" style="padding:20px;" class="btn <%=btn_class%>"></td>
          <% } %>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

