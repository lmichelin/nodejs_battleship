<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <title>The Battleship Game</title>
</head>
<body>

<h1 class="text-center">The Battleship Game</h1>

  <div class="container">
    <table style="border: none;" class="table table-bordered text-center">
      <tbody>
        <% for (var i = 0; i < battleship.grid.length; i++) {%>
          <tr value="<%=i%>">
          <% for (var j = 0; j < battleship.grid[i].length; j++) {
            switch (battleship.grid[i][j]) {
              case 0:
                var btn_class = "btn-info";
                break;
              case 1:
                var btn_class = "btn-default";
                break;
              case 2:
                var btn_class = "btn-success";
                break;
              case 3:
                var btn_class = "btn-warning";
                break;
              case 4:
                var btn_class = "btn-danger";
                break;
              default:
                var btn_class = "";
          break; } %>
          <td value="<%=j%>" type="button" onclick="action($(this).parent().attr('value'), $(this).attr('value'))" style="padding:20px;" class="btn <%=btn_class%>"></td>
            <% } %>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <%= boat %>


  <p id="output">

  </p>

  <script>
    var boat = <%- JSON.stringify(boat) %>;
  </script>
  <script src="script.js"></script>

</body>
</html>
