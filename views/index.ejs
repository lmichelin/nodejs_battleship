<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <title>The Battleship Game</title>
</head>
<body>

<h1 class="text-center">The Battleship Game</h1>
  <div class="container">
    <table style="border: none;" class="table table-bordered text-center">
      <tbody>
        <% for (var i = 0; i < battleship.grid.length; i++) {%>
          <tr value="<%=i%>">
          <% for (var j = 0; j < battleship.grid[i].length; j++) {
            switch (battleship.grid[i][j]) {
              case 0:
                var btn_class = "btn-info";
                break;
              case 1:
                var btn_class = "btn-default";
                break;
              case 2:
                var btn_class = "btn-success";
                break;
              case 3:
                var btn_class = "btn-warning";
                break;
              case 4:
                var btn_class = "btn-danger";
                break;
              default:
                var btn_class = "";
          break; } %>
          <td value="<%=j%>" type="button" onclick="action($(this).parent().attr('value'), $(this).attr('value'))" style="padding:20px;" class="btn <%=btn_class%>"></td>
            <% } %>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <p><input type="button" value="Embêter le serveur" id="poke" /></p>
  <p><input type="button" value="login" id="login" /></p>


  <p id="output">

  </p>

  <script src="/socket.io/socket.io.js"></script>
  <script src="script.js"></script>

  <script>
  var socket = io.connect('/');
  // var pseudo = prompt('Quel est votre pseudo ?');
  // socket.emit('petit_nouveau', pseudo);
  socket.on('message', function(message) {
    console.log('Le serveur a un message pour vous : ' + message);
  })

  $('#poke').click(function () {
    socket.emit('message', 'Salut serveur, ça va ?');
  })
  $('#login').click(function () {
    var pseudo = 'my_username'
    socket.emit('login', pseudo);
  })
  </script>
</body>
</html>
