<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <title>The Battleship Game</title>
</head>
<body>

  <p>
    <div class="form-group">
      Ligne:<br>
      <input id="row" type="number" name="row" value="0">
      <br>
      Colonne:<br>
      <input id="column" type="number" name="column" value="0">
      <br><br>
      <button class="btn btn-primary" onclick="action()">submit</button>
    </div>
  </p>
  <p id="output">

  </p>

  <div class="container">
    <table style="border: none;" class="table table-bordered text-center">
      <tbody>
        <% for (var i = 0; i < battleship.grid.length; i++) {%>
          <tr class="row_number_<%=i+1%>">
          <% for (var j = 0; j < battleship.grid[i].length; j++) {
            switch (battleship.grid[i][j]) {
              case 0: %>
                <td style="padding:20px;" class="btn btn-info"></td>
                <% break;
              case 1: %>
                <td style="padding:20px;" class="btn btn-warning"></td>
                <% break;
              case 2: %>
                <td style="padding:20px;" class="btn btn-danger"></td>
                  <% break;
              default: %>
                <td></td>
          <%break; }
            } %>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="script.js"></script>

</body>
</html>
