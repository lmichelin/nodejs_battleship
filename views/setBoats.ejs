<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
<!--   <meta name="viewport" content="width=device-width, initial-scale=1.0">
 -->  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/css/stylesheet.css">
  <title>The Battleship Game</title>
</head>
<body>

<div id="boats">
    
    <!-- Title -->
    <div class="row">
    <h1 class="col-sm-offset-3 text-center col-sm-4 title">The Battleship Game</h1>
    </div>
    <div class="row">
    <div class="col-sm-2 col-sm-offset-1 text-center no-padding">
        <h3>Drag&drop your boats :</h3>
        
        <div v-for='boat in battleship.boats' :key='boat.name'>
            <h3>{{boat.name}}</h3>
            <div :id='boat.name' class="divTable draggable boatsTable">
                <div class="divTableBody">
                    <div class="divTableRow">
                        <div v-for='cell in boat.size' class="divTableCell">&nbsp;</div>
                    </div>
                </div>
            </div>
            <br />
        </div>
        
        <!-- Rotate your boat button -->
        <button type="button" class="btn btn-info">Rotate</button>
        
    </div>

    <div class="col-sm-4 text-center no-padding">
        <div id='grid' class="divTable center setBoatsTable">
            <div class="divTableBody">
                <div class="divTableHeading divTableCell"></div>
                <div v-for='col in battleship.grid.length' :value="col" class="divTableHeading divTableCell">{{String.fromCharCode(64+col)}}</div>
                <div v-for='row in battleship.grid.length' :value="row" class="divTableRow">
                    <div class="divTableHeading divTableCell">{{row}}</div>
                    <div v-for='cell in battleship.grid.length' :value='cell' class="divTableCell case">&nbsp;</div>
                </div>
            </div>
        </div>

        <!-- Validate setBoats -->
        <button v-on:click='submitBoats' type="button" class="btn btn-info title">Submit</button>

    </div>

    <div class="col-sm-3">
        <div v-for='error in errors' class="alert alert-danger" role="alert">
            {{error}}
        </div>
    </div>


</div>
</div>

    <!-- JS -->
  <script src="/node_modules/vue/dist/vue.js"></script>
  <script src="/node_modules/vue-resource/dist/vue-resource.js"></script>  
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/setBoat.js"></script>

</body>
</html>